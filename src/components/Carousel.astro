---
import Glide from '@glidejs/glide';
---

<div class="glide">
  <div class="glide__track" data-glide-el="track">
    <ul class="glide__slides">
      <li class="glide__slide">
        <img src="/imágenes/localizaciones/imagen1.jpg" alt="Localización 1" />
      </li>
      <li class="glide__slide">
        <img src="/imágenes/localizaciones/imagen2.jpg" alt="Localización 2" />
      </li>
      <li class="glide__slide">
        <img src="/imágenes/localizaciones/imagen3.jpg" alt="Localización 3" />
      </li>
    </ul>
  </div>
</div>

<script>
import Glide from "@glidejs/glide";

  const glide = new Glide('.glide');
  glide.mount();
</script>

<style>
.glide {
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
}

.glide__slide img {
  width: 100%;
  border-radius: 8px;
}
</style>

