---
const menuItems = [
  { title: 'Inicio', link: '/' },
  { title: 'Historia', link: '/historia' },
  { title: 'Localizaciones', link: '/localizaciones' },
  { title: 'Productos', link: '/productos' },
  { title: 'Contacto', link: '/contacto'} // Enlace a la página de compras
];

const { cartItems = [] } = Astro.props;
---

<header class="header">
  <nav class="nav">
    <ul class="menu">
      {menuItems.map(item => (
        <li><a href={item.link}>{item.title}</a></li>
      ))}
    
    <div class="cart">
      <a href="/carrito">
         Carrito ({cartItems.length}) <!-- Muestra el número de productos en el carrito -->
      </a>
    </div>
  </ul>
  </nav>
</header>

<style>
/* Estilo base para el header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #006d77;
  padding: 20px;
}

/* Navegación */
nav {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%; /* Ocupa todo el ancho del header */
}

nav ul.menu {
  list-style: none;
  display: flex;
  justify-content: center;
  padding: 0;
  margin: 0;
  gap: 15px; /* Espacio entre los elementos del menú */
}

nav ul.menu li {
  background-color: #007f7f; /* Color de fondo */
  padding: 10px 20px; /* Relleno interno */
  border-radius: 5px; /* Bordes redondeados */
}

nav ul.menu li a {
  color: #fff;
  text-decoration: none;
  font-size: 18px;
}

nav ul.menu li a:hover {
  text-decoration: underline;
}

/* Carrito */
.cart {
  font-size: 18px;
  margin-left: auto; /* Empuja el carrito hacia la derecha */
}

.cart a {
  color: white;
  text-decoration: none;
  background-color: #007f7f;
  padding: 10px 20px;
  border-radius: 5px;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 5px;
}

.cart a:hover {
  background-color: #005f5f; /* Color al pasar el ratón */
}

.cart a::before {
  content: '🛒'; /* Icono del carrito */
  margin-right: 5px;
}

/* Responsividad para pantallas pequeñas */
@media (max-width: 768px) {
  .header {
    flex-direction: column; /* Cambia a diseño vertical */
    align-items: flex-start;
  }

  nav {
    width: 100%; /* Ocupa todo el ancho */
    margin-top: 10px;
  }

  nav ul.menu {
    flex-direction: column; /* Los elementos del menú en columna */
    width: 100%; /* Ocupan todo el ancho */
    gap: 10px; /* Espacio entre los elementos */
  }

  nav ul.menu li {
    text-align: center; /* Centra el texto de los enlaces */
    width: 100%; /* Los enlaces ocupan todo el ancho disponible */
  }

  nav ul.menu li a {
    font-size: 16px; /* Ajusta el tamaño de la fuente */
  }

  .cart {
    width: 100%; /* Ocupa todo el ancho del header */
    text-align: center; /* Centra el carrito */
    margin-top: 15px; /* Espacio adicional con respecto al menú */
  }
}

@media (max-width: 480px) {
  .header {
    padding: 10px; /* Reduce el padding en pantallas muy pequeñas */
  }

  nav ul.menu li a {
    font-size: 14px; /* Reduce aún más el tamaño de la fuente */
  }

  .cart a {
    padding: 8px 15px; /* Reduce el relleno interno */
    font-size: 14px; /* Reduce el tamaño del texto del carrito */
  }
}

</style>


